{% extends 'base.html.twig' %}

{% block title %}OffreEmploiEtudiant{% endblock %}

{% block body %}
    <h1>OffreEmploiEtudiant</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Titre</th>
            <th>Description</th>
            <th>Type_contrat</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for offre_emploi in offre_emploi_etudiant %}
            <tr>
                <td>{{ offre_emploi.id }}</td>
                <td>{{ offre_emploi.titre }}</td>
                <td>{{ offre_emploi.description }}</td>
                <td>{{ offre_emploi.typeContrat }}</td>
                <td>

                    <form method="post" action="{{ path('app_default', {'id': offre_emploi.id,
                        'offre_emploi_data': {'id': offre_emploi.id,
                            'titre': offre_emploi.titre,
                            'description': offre_emploi.description,
                            'typeContrat': offre_emploi.typeContrat}})
                    }}">
                        <button type="submit">Envoyer</button>
                    </form>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
