{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table-light" class="text-secondary">
        <tbody>

            <tr>
                <th>Email</th>

                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ user.adresse }}</td>
            </tr>

            <tr>
                <th>Domaine_etude</th>
                <td>{{ user.domaineEtude }}</td>
            </tr>

            <tr>
                <th>Est_valide</th>
                <td>{{ user.estValide ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>


        </tbody>
    </table>

    <td> <th> <a href="{{ path('app_user_index') }}">
        <button type="button" class="btn btn-outline-light">RETOUR</button></a></th></td>

    <td> <th> <a href="{{ path('app_user_edit', {'id': app.user.id}) }}">
        <button type="button" class="btn btn-outline-light">MODIFIER</button></a></th></td>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
