{% extends 'base.html.twig' %}

{% block title %}Conference{% endblock %}

{% block body %}
    <h1>Conference</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ conference.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ conference.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ conference.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ conference.date ? conference.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Heure</th>
                <td>{{ conference.heure }}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ conference.duree }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_conference_index') }}">back to list</a>

    <a href="{{ path('app_conference_edit', {'id': conference.id}) }}">edit</a>

    {{ include('conference/_delete_form.html.twig') }}
{% endblock %}
