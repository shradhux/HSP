<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/5.3.2/vapor/bootstrap.min.css">

        {% endblock %}
{% if app.user %}
        <nav class="navbar navbar-expand-lg bg-light" data-bs-theme="light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">HSP</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" href="{{ path('app_default') }}">Home
                                <span class="visually-hidden">(current)</span>
                            </a>
                        </li>

                        {% if app.user.roles == "ROLE_ADMIN"%}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_user_index') }}">Gestion User</a>
                        </li>
                        {% endif %}
                    </ul>
                    <a class="nav-link" href="{{ path('app_logout') }}"> Déconnexion  </a>
                    <form class="d-flex">
                        <a href="{{ path('app_user_show', {'id': app.user.id}) }}"> <img src="https://th.bing.com/th/id/OIP.krlRmPtiV2awvays83_9LAAAAA?pid=ImgDet&rs=1" lenght="45px" width="45px" /> </a>
                    </form>
                </div>
            </div>
        </nav>
        {% endif %}
    </head>
    <body>
        {% block body %}{% endblock %}
    </body>
</html>
